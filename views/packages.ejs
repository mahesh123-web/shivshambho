<%- include('partials/header') %>

    <section class="page-hero">
        <div class="container">
            <span class="section-tag reveal">PRICING</span>
            <h1 class="reveal">Protection Packages</h1>
            <p class="page-subtitle reveal">Choose the level of protection that fits your driving habits and budget. All
                packages include a full exterior decontamination.</p>
        </div>
    </section>

    <section class="packages-page">
        <div class="container">
            <div class="packages-grid">
                <% packages.forEach((pkg, index)=> { %>
                    <div class="package-card reveal <%= pkg.is_popular ? 'popular' : '' %>"
                        data-delay="<%= index * 100 %>">
                        <% if (pkg.is_popular) { %>
                            <div class="popular-badge">MOST POPULAR</div>
                            <% } %>
                                <div class="package-header">
                                    <h3>
                                        <%= pkg.name %>
                                    </h3>
                                    <p class="package-tagline">
                                        <%= pkg.tagline %>
                                    </p>
                                    <div class="package-price">
                                        <span class="price">â‚¹<%= Number(pkg.price).toLocaleString() %></span>
                                        <span class="duration">/ <%= pkg.duration %></span>
                                    </div>
                                </div>
                                <ul class="package-features">
                                    <% pkg.features.forEach(feature=> { %>
                                        <li>
                                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
                                                stroke="<%= pkg.is_popular ? '#0ea5e9' : '#22c55e' %>"
                                                stroke-width="2.5">
                                                <path d="M20 6L9 17l-5-5" />
                                            </svg>
                                            <%= feature %>
                                        </li>
                                        <% }); %>
                                </ul>
                                <button type="button"
                                    class="btn <%= pkg.is_popular ? 'btn-primary' : 'btn-outline' %> btn-block package-toggle-btn"
                                    data-package-id="<%= pkg.id %>">
                                    <span class="btn-text-toggle">View Options</span>
                                    <svg class="toggle-chevron" width="16" height="16" viewBox="0 0 24 24" fill="none"
                                        stroke="currentColor" stroke-width="2.5">
                                        <path d="M6 9l6 6 6-6" />
                                    </svg>
                                </button>
                                <div class="sub-options-panel" id="subPanel-pkg-<%= pkg.id %>">
                                    <div class="sub-options-grid">
                                        <% let vehicleTypes=[]; if (pkg.name==='Essential' )
                                            vehicleTypes=['Bike', 'Hatchback' , 'Sedan' , 'SUV' ]; else if
                                            (pkg.name==='Professional' ) vehicleTypes=['Bike', 'Hatchback' , 'Sedan'
                                            , 'SUV' , 'Luxury' ]; else if (pkg.name==='Signature' )
                                            vehicleTypes=['Standard', 'Premium' ]; vehicleTypes.forEach(vt=> { %>
                                            <a href="/booking?package=<%= pkg.id %>&vehicle=<%= encodeURIComponent(vt) %>"
                                                class="sub-option-box">
                                                <div class="sub-option-icon">
                                                    <% if (vt==='Bike' ) { %>
                                                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none"
                                                            stroke="currentColor" stroke-width="1.5">
                                                            <circle cx="5" cy="18" r="3" />
                                                            <circle cx="19" cy="18" r="3" />
                                                            <path d="M12 18V6l-3 4h6" />
                                                        </svg>
                                                        <% } else if (vt==='Hatchback' ) { %>
                                                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none"
                                                                stroke="currentColor" stroke-width="1.5">
                                                                <rect x="2" y="13" width="20" height="5" rx="2" />
                                                                <path d="M6 13V9a2 2 0 012-2h4l4 6" />
                                                                <circle cx="7" cy="18" r="2" />
                                                                <circle cx="17" cy="18" r="2" />
                                                            </svg>
                                                            <% } else if (vt==='Sedan' ) { %>
                                                                <svg width="28" height="28" viewBox="0 0 24 24"
                                                                    fill="none" stroke="currentColor"
                                                                    stroke-width="1.5">
                                                                    <rect x="1" y="13" width="22" height="5" rx="2" />
                                                                    <path d="M5 13V9a2 2 0 012-2h10a2 2 0 012 2v4" />
                                                                    <circle cx="6.5" cy="18" r="2" />
                                                                    <circle cx="17.5" cy="18" r="2" />
                                                                </svg>
                                                                <% } else if (vt==='SUV' ) { %>
                                                                    <svg width="28" height="28" viewBox="0 0 24 24"
                                                                        fill="none" stroke="currentColor"
                                                                        stroke-width="1.5">
                                                                        <rect x="1" y="11" width="22" height="7"
                                                                            rx="2" />
                                                                        <path
                                                                            d="M4 11V7a2 2 0 012-2h12a2 2 0 012 2v4" />
                                                                        <circle cx="6.5" cy="18" r="2.5" />
                                                                        <circle cx="17.5" cy="18" r="2.5" />
                                                                    </svg>
                                                                    <% } else if (vt==='Luxury' ) { %>
                                                                        <svg width="28" height="28" viewBox="0 0 24 24"
                                                                            fill="none" stroke="currentColor"
                                                                            stroke-width="1.5">
                                                                            <rect x="1" y="12" width="22" height="6"
                                                                                rx="2" />
                                                                            <path
                                                                                d="M4 12V8a2 2 0 012-2h12a2 2 0 012 2v4" />
                                                                            <circle cx="6" cy="18" r="2" />
                                                                            <circle cx="18" cy="18" r="2" />
                                                                            <path d="M12 2l2 4h-4l2-4" />
                                                                        </svg>
                                                                        <% } else { %>
                                                                            <svg width="28" height="28"
                                                                                viewBox="0 0 24 24" fill="none"
                                                                                stroke="currentColor"
                                                                                stroke-width="1.5">
                                                                                <polygon
                                                                                    points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                                                                            </svg>
                                                                            <% } %>
                                                </div>
                                                <span class="sub-option-label">
                                                    <%= vt %>
                                                </span>
                                            </a>
                                            <% }); %>
                                    </div>
                                </div>
                    </div>
                    <% }); %>
            </div>

            <!-- Additional Info -->
            <div class="packages-info reveal">
                <div class="info-card">
                    <div class="info-icon">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.5">
                            <path
                                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                    </div>
                    <h4>Warranty Included</h4>
                    <p>All packages come with a manufacturer-backed warranty for your peace of mind.</p>
                </div>
                <div class="info-card">
                    <div class="info-icon">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.5">
                            <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h4>Quick Turnaround</h4>
                    <p>Most jobs completed within 1-2 days depending on the package selected.</p>
                </div>
                <div class="info-card">
                    <div class="info-icon">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.5">
                            <path
                                d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                        </svg>
                    </div>
                    <h4>Premium Products</h4>
                    <p>We use only certified, professional-grade ceramic coating products.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-banner">
        <div class="container">
            <div class="cta-content reveal">
                <h2>Not Sure Which Package?</h2>
                <p>Contact us for a free consultation and we'll recommend the perfect package for your vehicle.</p>
                <div class="cta-buttons">
                    <a href="/contact" class="btn btn-white">Get Free Consultation</a>
                    <a href="9860349257" class="btn btn-outline-white">Call 9860349257</a>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>